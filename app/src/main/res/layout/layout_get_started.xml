<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewDefaultIllustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imageViewDefaultIllustration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_illustration" />

    <TextView
        android:id="@+id/textViewShortly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/_30sdp"
        android:textColor="@color/bluish_purple"
        android:fontFamily="@font/opensans_bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintStart_toStartOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/let_get_started"
        android:textSize="@dimen/_17sdp"
        android:textColor="@color/bluish_purple"
        android:fontFamily="@font/opensans_bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewInstruction"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintStart_toStartOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paste_your_first_link"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/bluish_purple"
        android:gravity="center"
        android:includeFontPadding="false"
        android:fontFamily="@font/opensans_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintStart_toStartOf="@+id/imageViewDefaultIllustration"
        app:layout_constraintTop_toBottomOf="@id/textViewGetStarted" />
</androidx.constraintlayout.widget.ConstraintLayout>
